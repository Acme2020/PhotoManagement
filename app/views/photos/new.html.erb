

<div class="container"> 
  <div class="row">
    <div class="col-4 col-5">
    <h1> Upload new photos </h1>
      <%= form_with model: @photo, class: "nifty_form" do |f| %>
        <div class="form-group row">
            <%= f.label :shooting_date, "Date of the shooting", class:'control-label' %>
            <%= f.date_field :shooting_date, required: true, class: "form-control" %>
        </div>

        <div class="form-group row">
            <%= f.label :tag, "Select tags for the images", class:'control-label' %>
            <%= collection_select(:photo, :tag_ids, Tag.all.order(:name), :id, :name, {multiple: true}, {multiple: true, class: "form-control"}) %>
        </div>
        
        <div class="form-group row">
            <%= f.label :photographer, "Who shot the photo?", class:'control-label' %>
            <%= f.collection_select :photographer_id, Photographer.all.order(:name), :id, :name, include_blank: false %>
        </div>

        <div class="form-group row">
            <%= f.label :photos, "Select your photos", class:'control-label' %>
            <%= f.file_field :photos, multiple: true, required: true, class: "form-control-file" %>
        </div>

        <div class="form-group row">
            <%= f.label :permissions, "Upload the permissions", class:'control-label' %>
            <%= f.file_field :permissions, multiple: true, required: true, class: "form-control-file" %>
        </div>

        <div class="form-group row">
            <%= f.submit "Create", class: "btn btn-primary" %> 
        </div>
      </div>
    <% end %>
  </div>
</div>