<% if Date.current < @photo.download_date + 365.days %>

    <% @photo.photos.each do |image| %>
        <div><%= image_tag image.variant(resize: "200x200^", quality: 75).processed %></div>
        <div><%= button_to 'Download Image', photo_download_image_path(@photo), method: :get %></div>

            <% @photo.permissions.each do |permission| %>
                <p><%= link_to 'download permissions', rails_blob_path(permission, only_path: true) %></p>
            <% end %>

        <p>Shooting date: <%= @photo.shooting_date %></p>
        <p>Photographer: <%= @photo.photographer %></p>
        <p>Content: <%= @photo.content %></p>
        <p>File name: <%= image.filename %></p>
        <p>File type: <%= image.content_type %></p>
        <p>Size: <%= (image.byte_size)/1000000.to_f %> MB</p>
        <p>Uploaded: <%= @photo.created_at %></p>
        <p>Downloaded: <%= @photo.download_date %></p>
        <p>Delete Date: <%= @photo.delete_date %></p>
    <% end%>
<% else %>
    "Sorry, too late!" 
<% end %>
